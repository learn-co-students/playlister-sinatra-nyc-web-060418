<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2><%= @song.name %></h2>

<h4>Song Artist(s):</h4>
<p>
  <a href="/artists/<%= @song.artist.slug %>">
  <%= @song.artist.name %>
  </a>
</p>

<h4>Song Genre(s):</h4>
<p>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"> <%= genre.name %> </a>
    <br>
  <% end %>
</p>
