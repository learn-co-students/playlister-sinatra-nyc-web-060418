<h2><%= @genre.name %></h2>

<h4>Genre Artist(s):</h4>
<p>
  <% @genre.artists.each do |artist| %>
  <a href="/artists/<%= artist.slug %>"> <%= artist.name %> </a>
  <br>
  <% end %>
</p>

<h4>Genre Song(s):</h4>
<p>
  <% @genre.songs.each do |song| %>
    <a href="/songs/<%= song.slug %>"> <%= song.name %> </a>
    <br>
  <% end %>
</p>
